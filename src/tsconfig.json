{
	"extends": [
		"@tsconfig/node22/tsconfig.json",
	],
	"compilerOptions": {
		"composite": false,
		"noUncheckedIndexedAccess": false,
		"noUnusedLocals": false,
		"sourceMap": true,
		"outDir": "../dist",
		"isolatedModules": true,
		"types": [
			"node",
		],
	},

	"include": ["**/*.ts"],

	"exclude": [
		"node_modules/**",
		"test",
	]
}
