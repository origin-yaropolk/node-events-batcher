{

	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"name": "Tests debug",
			"request": "launch",
			// "env": {
			// 	"NODE_OPTIONS": "--experimental-vm-modules"
			// },
			"args": [
				"${workspaceRoot}/node_modules/jest/bin/jest",
				"--runInBand",
				"--no-coverage",
				"-c",
				"${workspaceFolder}/jest.config.json",
				"--watchAll=false",
			],
			"cwd": "${workspaceFolder}/",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}
